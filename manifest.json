{
  "manifest_version": 2,

  "name": "Snapper",
  "description": "This is a Chrome extension plugin used to get info snippets about startups on some particular websites.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*" , "https://*/*"],
	  "js": ["myscript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "<all_urls>",
	"storage",
	"tabs"
  ]
}
